@model IEnumerable<AttendanceManagementSystem.Core.DomainObjects.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Courses</h1>
@using (Html.BeginForm("Create", "Course"))
{
    <input type="text" class="form-control" placeholder="Course Name" name="course" />
    <input type="submit" value="Add Course" class="form-control" />
}

<table class="table table-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
          
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           
            <td>              
                <a asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
